{
  "name": "tamia",
  "description": "Panda CSS preset for component-driven development",
  "version": "5.0.20",
  "sideEffects": false,
  "scripts": {
    "start": "panda studio",
    "build": "panda studio --build",
    "pretest": "npm run lint",
    "test": "npm run typecheck",
    "posttest": "npm run format",
    "prepublishOnly": "npm run compile",
    "lint": "eslint . --cache --fix",
    "typecheck": "tsc --noEmit",
    "compile": "tsc --project tsconfig.build.json",
    "format": "prettier --log-level warn --write \"**/*.{js,cjs,mjs,ts,tsx,md,astro,json}\"",
    "prepare": "husky; panda codegen"
  },
  "homepage": "https://tamialib.netlify.app",
  "author": {
    "name": "Artem Sapegin",
    "url": "https://sapegin.me/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapegin/tamia.git"
  },
  "bugs": {
    "url": "https://github.com/sapegin/tamia/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "browserslist": [
    ">1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "peerDependencies": {
    "@pandacss/dev": ">=1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.4.0",
    "@pandacss/studio": "1.4.2",
    "@types/react": "^19.2.2",
    "astro": "^5.14.4",
    "eslint": "^9.37.0",
    "eslint-config-tamia": "^9.4.3",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5.9"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,astro,json,md}": "prettier --write",
    "*.{js,cjs,mjs,ts,tsx,astro}": "eslint --cache --fix"
  }
}
