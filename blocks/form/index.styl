// Basic form controls: inputs, textareas, buttons

// Bones

.field,
.button
	display: block
	width: 100%
	vertical-align: middle
	font-size: 1em
	line-height: 1

	&_inline
		display: inline-block
		width: auto

	&:disabled,
	&.is-disabled
		cursor: default
		pointer-events: none
		opacity: .4

.field_area
	resize: vertical

.button
	no-select()
	text-decoration: none
	white-space: nowrap
	cursor: pointer

	&:disabled,
	&.is-disabled
		pointer-events: none

	// Fixing Mozilla's inner paddings
	// https://github.com/nanoblocks/nanoblocks/blob/gh-pages/blocks/button/button.styl
	&::-moz-focus-inner
		padding: 0
		border: none

.form
	&_inline .field,
	&_inline .button,
	&_inline .select,
	&_inline .password
		display: inline-block
		width: auto

	&__group
		space(2)

	&__row
		space()
		&:last-child
			space(0)

	&__left
		float: left

	&__right
		float: right


// Default skin

blocks_default_skin ?= true
form_default_skin ?= false


if blocks_default_skin or form_default_skin

	.field,
	.button
		height: 2em
		border-radius: .15em

		&:focus
			outline: 0
			border-color: form_focus_color

	.field,
	.button:active
		transition: border-color .1s ease-in-out, box-shadow .1s ease-in-out

	.field
		padding: .3em .4em
		background: #fff
		border: 1px solid #bbb
		box-shadow: inset 0 .1em .2em black(.1)

		&:focus
			box-shadow: inset 0 .1em .2em black(.1), 0 0 .4em rgba(form_focus_color, .75)

		&_area
			height: auto

	.button
		height: 2em
		padding: .45em 1.5em .35em;
		background: #dfdfdf
		background: linear-gradient(top, #fefefe, #eaeaea)
		border: 1px solid #bbb
		border-bottom-color: #aaa
		color: #555
		border-radius: .15em
		box-shadow: 0 .1em .1em black(.05)
		text-shadow: 0 1px 0 white(.4)

		&:focus
			box-shadow: 0 0 .4em rgba(form_focus_color, .75)

		&:not(:disabled):not(.is-disabled):hover
			background: linear-gradient(top, #fff, #f0f0f0)
			color: #333

		&:not(:disabled):not(.is-disabled):active
			padding-top: .55em
			padding-bottom: .25em
			background: #cacaca
			background: linear-gradient(top, #aaa, #dfdfdf)
			box-shadow: 0 0 .4em rgba(form_focus_color, .75), inset 0 .1em .2em black(.2), 0 .025em .05em black(.05)
			border-color: form_focus_color
			border-top-color: #888

		&:disabled,
		&.is-disabled
			text-shadow: none
