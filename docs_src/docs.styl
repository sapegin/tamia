blocks_default_skin = true
content_max_width = 1024px

@import "tamia"
@import "blocks/text"
@import "blocks/list"
@import "blocks/code"
@import "blocks/richtypo"

body
	font: 16px/1.4 "Helvetica Neue", Arial, sans-serif

.content
	padding: 0 4*spacer

.page-content
	padding-top: spacer
	padding-bottom: spacer

.header
	tweak-inverted-text()
	background: #222
	color: #fff

	a
		&,
		&:link,
		&:visited,
		&:hover,
		&:active,
		&:focus
			color: #fff

.logo
	display: inline-block
	margin-right: 2em
	padding: 4px 0 10px
	font-size: 24px

.nav
	display: inline-block
	list-style-type: none

	&__item
		display: inline-block

	&__link
		display: block
		padding: 12px .75em 13px

	&__link_active
		background: #555
		background: linear-gradient(#555, #3f3f3f)
		text-decoration: none


.splash
	space(4)

	&__title
		font-size: 56px
		font-weight: normal

	&__subtitle
		font-size: 28px
